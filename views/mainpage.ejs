<!doctype html>
<html lang="en">                                          
<head>
    <meta charset="utf-8">                                  
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>main-page</title>                                
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  </head>
  <body>
    <div class="container text-center mt-2 mb-3">
        <h1>Welcome to INews</h1>
    </div>
    
    <div class="container mt-2 mb-3">
            <h3>Top News (from <%= countryNameIs.toUpperCase() %>)</h3>
<% respond1.forEach((dataS) => { %>
            <div class="card mb-3">
                <img src="<%= dataS.urlToImage %>" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title"><%= dataS.title %></h5>
                    <p class="card-text"><%= dataS.description %></p>
                    <p class="card-text">src: <a href="<%= dataS.url %>"><%= dataS.url.slice(0,83) %>...<b>Read more&gt;</b></a></p>
<% var imeIs = (new Date() - new Date(dataS.publishedAt))/60000; timeIs = (imeIs >= 1440) ? Math.floor(imeIs/1440) : Math.floor(imeIs) %>
                    <p class="card-text"><small class="text-muted"><%= timeIs %> day ago <br />by <%= dataS.source.name %></small></p>
                </div>
            </div>
<% }) %>
    </div>

    <div class="container">
        <h2>select specific country news</h2>
<% for(z = 0; z < lister.length; z++) { %>
        <a class="btn btn-dark mt-1" href="mainpage?id=<%= codes[z] %>"><%= lister[z] %></a>
<% } %>
    </div>
 
    <div class="container text-center bg-dark p-3 mt-2">
        <p class="text-light">Â©copyright inews 2023-2024</p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>
